<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
  <property name="hibernate.connection.password">adila</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:33306/agile</property>
  <property name="hibernate.connection.username">agile</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
  <property name="hibernate.current_session_context_class">thread</property>
  <mapping class="org.ams.db.Student" resource="org/ams/db/Student.hbm.xml"/>
  <mapping class="org.ams.db.Record" resource="org/ams/db/Record.hbm.xml"/>
  <mapping class="org.ams.db.Program" resource="org/ams/db/Program.hbm.xml"/>
  <mapping class="org.ams.db.Module" resource="org/ams/db/Module.hbm.xml"/>
  <mapping class="org.ams.db.User" resource="org/ams/db/User.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
